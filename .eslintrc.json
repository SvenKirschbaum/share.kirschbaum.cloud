{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": "off",
        "no-new": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["lib"],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
